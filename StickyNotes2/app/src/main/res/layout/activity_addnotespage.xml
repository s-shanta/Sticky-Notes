<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#daf7f6"
    tools:context="com.example.nipuxo.stickynotes.addnotespage">


<EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/titleET"
        android:layout_marginTop="30dp"
        android:hint="Title:"
        android:textSize="25dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/titleET"
        android:background="#ffffff"
        android:id="@+id/noteET"
        android:hint="Your notes here" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/noteET"
        android:id="@+id/deleteBTN"
        android:background="@drawable/delete"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/noteET"
        android:layout_marginLeft="87dp"
        android:layout_toRightOf="@+id/deleteBTN"
        android:id="@+id/doneBTN"
        android:background="@drawable/done"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/settingsBTN"
        android:background="@drawable/settings"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/noteET"
        android:layout_toRightOf="@+id/doneBTN"
        android:layout_marginTop="10dp"/>

    </RelativeLayout>
